<h1><%= @user.name %></h1>
<p><%= @user.email %></p>

<h1> Your addresses </h1>
<% @user.addresses.each do |address| %>
<section id = "address-<%= address.id %>">
  <p>Type: <%= address.nickname%> </p>
  <p>Address: <%= address.street%></p>
  <p><%= address.city%></p>
  <p><%= address.state%></p>
  <p><%= address.zip%></p>
  <% if address.orders_that_are_shipped_status.empty? %>
  <%= link_to 'edit address',"/users/#{@user.id}/addresses/#{address.id}/edit"  %>
  <%= link_to 'delete address',"/users/#{@user.id}/addresses/#{address.id}", method: :delete %>
  <% end %>
  </section>
<hr>
<% end  %>
<%= link_to 'Edit', '/profile/edit' %>
<%= link_to 'Change Password', '/profile/edit_password' %>
<%= link_to 'Add Address', "/users/#{@user.id}/addresses/new" %>
<%= link_to 'My Orders', '/profile/orders' %>
