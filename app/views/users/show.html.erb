<h1><%= @user.name %></h1>
<p><%= @user.email %></p>

<h1> Your addresses </h1>
<% @user.addresses.each do |address| %>
  <p>Type: <%= address.nickname%> </p>
  <p>Address: <%= address.street%></p>
  <p><%= address.city%></p>
  <p><%= address.state%></p>
  <p><%= address.zip%></p>
<hr>
<% end  %>
<%= link_to 'Edit', '/profile/edit' %>
<%= link_to 'edit address',"/users/:user_id/addresses/:id/edit"  %>
<%= link_to 'Change Password', '/profile/edit_password' %>
<%= link_to 'Add Address', "/users/#{@user.id}/addresses/new" %>
<%= link_to 'My Orders', '/profile/orders' %>
