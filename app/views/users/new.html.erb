<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

    <%= f.fields_for :addresses do |fx| %>

    <%= fx.label :street %>
    <%= fx.text_field :street %>

    <%= fx.label :city%>
    <%= fx.text_field :city %>

    <%= fx.label :state%>
    <%= fx.text_field :state %>

    <%= fx.label :zip %>
    <%= fx.text_field :zip %>
    <% end  %>
  <%= f.submit 'Register' %>
<% end %>
